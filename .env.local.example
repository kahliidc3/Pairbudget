# Firebase client configuration
# Copy this file to .env.local and replace placeholders with real values.

NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890
NEXT_PUBLIC_FIREBASE_APP_ID=1:1234567890:web:abcdef123456

# Optional: App base URL for invite links
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Remote logger endpoint (disabled when empty)
NEXT_PUBLIC_LOGGER_ENDPOINT=

# Optional: Sentry DSN (disabled when empty)
NEXT_PUBLIC_SENTRY_DSN=

# Optional: Firebase emulator toggle (development only)
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=
