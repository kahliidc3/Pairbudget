{
    "designSystem": {
      "name": "Modern Dashboard Design System",
      "version": "1.0.0",
      "description": "A comprehensive design system for building modern, clean dashboard interfaces with emphasis on data visualization and user management"
    },
    "colorPalette": {
      "primary": {
        "slate": {
          "50": "#f8fafc",
          "100": "#f1f5f9",
          "200": "#e2e8f0",
          "300": "#cbd5e1",
          "400": "#94a3b8",
          "500": "#64748b",
          "600": "#475569",
          "700": "#334155",
          "800": "#1e293b",
          "900": "#0f172a"
        },
        "accent": {
          "green": "#10b981",
          "blue": "#3b82f6",
          "purple": "#8b5cf6",
          "orange": "#f97316",
          "red": "#ef4444"
        }
      },
      "semantic": {
        "success": "#10b981",
        "warning": "#f59e0b",
        "danger": "#ef4444",
        "info": "#3b82f6"
      },
      "gradients": {
        "subtle": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
        "vibrant": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
        "warm": "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
        "secondary": "SF Pro Display, system-ui, sans-serif"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      },
      "fontWeights": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },
    "spacing": {
      "scale": "0.25rem",
      "values": {
        "xs": "0.5rem",
        "sm": "0.75rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem"
      }
    },
    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "base": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "9999px"
    },
    "shadows": {
      "subtle": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "medium": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "large": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "card": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
    },
    "layoutPatterns": {
      "sidebar": {
        "width": "280px",
        "collapsedWidth": "80px",
        "backgroundColor": "slate-700",
        "position": "fixed",
        "height": "100vh"
      },
      "mainContent": {
        "marginLeft": "280px",
        "padding": "2rem",
        "backgroundColor": "slate-50",
        "minHeight": "100vh"
      },
      "grid": {
        "columns": {
          "default": "repeat(auto-fit, minmax(300px, 1fr))",
          "cards": "repeat(auto-fit, minmax(280px, 1fr))",
          "stats": "repeat(auto-fit, minmax(200px, 1fr))"
        },
        "gap": "1.5rem"
      }
    },
    "componentPatterns": {
      "cards": {
        "base": {
          "backgroundColor": "white",
          "borderRadius": "0.75rem",
          "padding": "1.5rem",
          "boxShadow": "subtle",
          "border": "1px solid slate-200"
        },
        "interactive": {
          "hover": {
            "transform": "translateY(-2px)",
            "boxShadow": "medium",
            "transition": "all 0.2s ease"
          }
        },
        "variants": {
          "stat": {
            "textAlign": "center",
            "minHeight": "120px"
          },
          "chart": {
            "minHeight": "300px"
          },
          "list": {
            "padding": "0"
          }
        }
      },
      "buttons": {
        "base": {
          "borderRadius": "0.5rem",
          "fontWeight": "500",
          "transition": "all 0.2s ease",
          "cursor": "pointer"
        },
        "variants": {
          "primary": {
            "backgroundColor": "blue-600",
            "color": "white",
            "padding": "0.75rem 1.5rem"
          },
          "secondary": {
            "backgroundColor": "slate-200",
            "color": "slate-700",
            "padding": "0.75rem 1.5rem"
          },
          "icon": {
            "width": "2.5rem",
            "height": "2.5rem",
            "borderRadius": "full"
          }
        }
      },
      "navigation": {
        "sidebar": {
          "itemHeight": "3rem",
          "itemPadding": "0.75rem 1rem",
          "activeIndicator": {
            "backgroundColor": "blue-600",
            "borderRadius": "0.5rem"
          }
        },
        "breadcrumb": {
          "fontSize": "0.875rem",
          "color": "slate-500",
          "separator": "/"
        }
      }
    },
    "dataVisualization": {
      "charts": {
        "donut": {
          "strokeWidth": "8px",
          "centerText": {
            "fontSize": "2rem",
            "fontWeight": "600"
          }
        },
        "bar": {
          "borderRadius": "0.25rem",
          "spacing": "0.5rem"
        },
        "line": {
          "strokeWidth": "2px",
          "pointRadius": "4px"
        }
      },
      "colors": {
        "series": [
          "#3b82f6",
          "#10b981",
          "#f59e0b",
          "#ef4444",
          "#8b5cf6",
          "#06b6d4"
        ]
      }
    },
    "userInterface": {
      "avatars": {
        "sizes": {
          "xs": "1.5rem",
          "sm": "2rem",
          "md": "2.5rem",
          "lg": "3rem",
          "xl": "4rem"
        },
        "borderRadius": "full",
        "border": "2px solid white"
      },
      "badges": {
        "borderRadius": "full",
        "fontSize": "0.75rem",
        "padding": "0.25rem 0.75rem",
        "fontWeight": "500"
      },
      "indicators": {
        "online": {
          "backgroundColor": "green-400",
          "size": "0.75rem",
          "borderRadius": "full",
          "border": "2px solid white"
        }
      }
    },
    "animations": {
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.2s ease",
        "slow": "0.3s ease"
      },
      "hover": {
        "scale": "1.02",
        "translateY": "-2px"
      },
      "loading": {
        "opacity": "0.6",
        "transform": "scale(0.98)"
      }
    },
    "responsiveBreakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "designPrinciples": {
      "hierarchy": {
        "description": "Use clear visual hierarchy with typography scales and spacing",
        "implementation": "Large headings, medium subheadings, subtle body text"
      },
      "whitespace": {
        "description": "Generous use of whitespace for clarity and focus",
        "implementation": "Consistent padding and margins, breathing room between elements"
      },
      "consistency": {
        "description": "Consistent spacing, colors, and interaction patterns",
        "implementation": "Use design tokens, maintain pattern library"
      },
      "accessibility": {
        "description": "High contrast ratios, clear focus states, semantic markup",
        "implementation": "WCAG 2.1 AA compliance, keyboard navigation"
      }
    },
    "applicationGuidance": {
      "forPairBudget": {
        "theme": "dark",
        "primaryColors": ["slate-800", "slate-700", "blue-600", "green-500"],
        "cardStyle": "glassmorphism or solid dark cards with subtle borders",
        "typography": "Clean, readable fonts with good contrast on dark backgrounds",
        "dataVisualization": "Use accent colors for expense categories, spending trends",
        "userExperience": "Focus on collaborative features - shared views, real-time updates, clear ownership indicators"
      }
    }
  }