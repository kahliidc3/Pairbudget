{
    "designSystem": {
      "name": "Modern Glassmorphism Authentication UI",
      "version": "1.0.0",
      "description": "A contemporary design system featuring glassmorphism effects, layered cards, and vibrant gradient backgrounds"
    },
    "colorPalette": {
      "primary": {
        "blue": "#4F7EF7",
        "darkBlue": "#2B4A8C",
        "navyBlue": "#1E3A5F"
      },
      "neutral": {
        "white": "#FFFFFF",
        "lightGray": "#F5F7FA",
        "mediumGray": "#E1E8ED",
        "darkGray": "#8B9BAD"
      },
      "background": {
        "gradientStart": "#6B8FFF",
        "gradientEnd": "#4A6EE8",
        "overlayWhite": "rgba(255, 255, 255, 0.15)",
        "cardBackground": "rgba(255, 255, 255, 0.95)"
      }
    },
    "typography": {
      "fontFamily": "Inter, system-ui, -apple-system, sans-serif",
      "weights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "scale": {
        "hero": {
          "fontSize": "2.5rem",
          "lineHeight": "1.2",
          "fontWeight": 700,
          "letterSpacing": "-0.02em"
        },
        "title": {
          "fontSize": "1.5rem",
          "lineHeight": "1.3",
          "fontWeight": 600
  
        },
        "body": {
          "fontSize": "0.875rem",
          "lineHeight": "1.5",
          "fontWeight": 400
        },
        "caption": {
          "fontSize": "0.75rem",
          "lineHeight": "1.4",
          "fontWeight": 500
        }
      }
    },
    "spacing": {
      "scale": [4, 8, 12, 16, 20, 24, 32, 40, 48, 64, 80, 96],
      "component": {
        "cardPadding": "32px",
        "inputPadding": "16px",
        "buttonPadding": "12px 24px",
        "elementGap": "20px"
      }
    },
    "borderRadius": {
      "small": "8px",
      "medium": "12px",
      "large": "16px",
      "xlarge": "20px"
    },
    "shadows": {
      "card": "0 20px 40px rgba(0, 0, 0, 0.1)",
      "cardHover": "0 25px 50px rgba(0, 0, 0, 0.15)",
      "button": "0 4px 12px rgba(79, 126, 247, 0.3)",
      "input": "0 2px 8px rgba(0, 0, 0, 0.05)"
    },
    "effects": {
      "glassmorphism": {
        "background": "rgba(255, 255, 255, 0.25)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(255, 255, 255, 0.18)"
      },
      "cardBlur": {
        "background": "rgba(255, 255, 255, 0.95)",
        "backdropFilter": "blur(20px)"
      }
    },
    "layout": {
      "structure": "dual-card-layered",
      "composition": {
        "background": "full-viewport-gradient",
        "cardArrangement": "overlapping-offset",
        "cardRelationship": "hero-card-behind-form-card"
      },
      "positioning": {
        "heroCard": {
          "transform": "translateX(-20px) translateY(-10px)",
          "zIndex": 1
        },
        "formCard": {
          "transform": "translateX(20px) translateY(10px)",
          "zIndex": 2
        }
      }
    },
    "components": {
      "backgroundGradient": {
        "type": "diagonal-gradient",
        "direction": "135deg",
        "colors": ["#6B8FFF", "#4A6EE8"],
        "overlay": "geometric-shapes-optional"
      },
      "heroCard": {
        "width": "400px",
        "height": "480px",
        "background": "image-with-overlay",
        "overlay": "rgba(0, 0, 0, 0.4)",
        "content": {
          "title": "large-white-text",
          "subtitle": "smaller-white-text-link"
        }
      },
      "formCard": {
        "width": "360px",
        "height": "440px",
        "background": "solid-dark-blue",
        "padding": "40px",
        "elements": [
          {
            "type": "close-button",
            "position": "top-right",
            "style": "white-circle-background"
          },
          {
            "type": "input-group",
            "fields": ["email", "password"],
            "styling": "minimal-underline-borders"
          },
          {
            "type": "checkbox",
            "label": "terms-of-service"
          },
          {
            "type": "primary-button",
            "text": "sign-up",
            "style": "white-background-dark-text"
          },
          {
            "type": "secondary-link",
            "text": "already-member-login"
          }
        ]
      },
      "inputField": {
        "style": "minimal",
        "border": "none",
        "borderBottom": "1px solid rgba(255, 255, 255, 0.3)",
        "background": "transparent",
        "color": "white",
        "placeholder": "rgba(255, 255, 255, 0.7)",
        "focus": {
          "borderBottomColor": "white",
          "outline": "none"
        }
      },
      "primaryButton": {
        "background": "white",
        "color": "#2B4A8C",
        "border": "none",
        "borderRadius": "24px",
        "padding": "12px 32px",
        "fontWeight": 600,
        "hover": {
          "transform": "translateY(-2px)",
          "boxShadow": "0 6px 16px rgba(255, 255, 255, 0.3)"
        }
      }
    },
    "patterns": {
      "cardLayering": {
        "technique": "overlapping-cards",
        "offset": "20px-diagonal",
        "depth": "z-index-stacking"
      },
      "visualHierarchy": {
        "primary": "large-hero-text",
        "secondary": "form-inputs",
        "tertiary": "supporting-links"
      },
      "contentFlow": {
        "left": "visual-branding-content",
        "right": "interactive-form-elements"
      }
    },
    "animations": {
      "cardHover": {
        "transform": "translateY(-4px)",
        "transition": "all 0.3s ease",
        "boxShadow": "enhanced"
      },
      "buttonHover": {
        "transform": "translateY(-2px)",
        "transition": "all 0.2s ease"
      },
      "inputFocus": {
        "borderColor": "animated-to-white",
        "transition": "border-color 0.2s ease"
      }
    },
    "responsiveBreakpoints": {
      "mobile": "max-width: 768px",
      "tablet": "max-width: 1024px",
      "desktop": "min-width: 1025px"
    },
    "usageGuidelines": {
      "whenToUse": [
        "Authentication flows",
        "Onboarding experiences",
        "Premium product signups",
        "Modern web applications"
      ],
      "designPrinciples": [
        "Layer cards with subtle offsets for depth",
        "Use glassmorphism effects sparingly for elegance",
        "Maintain high contrast for accessibility",
        "Implement smooth micro-interactions",
        "Balance visual content with functional elements"
      ],
      "implementation": {
        "framework": "React/Vue/Angular compatible",
        "cssFramework": "Tailwind CSS recommended",
        "dependencies": "backdrop-filter support required"
      }
    }
  }